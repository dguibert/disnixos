{ networkFile
, useBackdoor ? false
, nixpkgs ? builtins.getEnv "NIXPKGS_ALL"
, nixos ? builtins.getEnv "NIXOS"
}:

let
  pkgs = import nixpkgs {};
  infrastructureNix = @prefix@/share/disnixos/infrastructure.nix.in;
in
pkgs.stdenv.mkDerivation {
  name = "infrastructure.nix";
  buildCommand = ''
    sed -e "s|@networkFile@|${networkFile}|" \
        -e "s|@nixpkgs@|${nixpkgs}|" \
	-e "s|@nixos@|${nixos}|" \
	-e "s|@useBackdoor@|${if useBackdoor then "true" else "false"}|" ${infrastructureNix} > $out
  '';
}
