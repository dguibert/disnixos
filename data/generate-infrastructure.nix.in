{ networkFiles
, useBackdoor ? false
, useVMTesting ? false
, nixpkgs ? <nixpkgs>
, nixos ? <nixos>
}:

let
  pkgs = import nixpkgs {};
  infrastructureNix = @prefix@/share/disnixos/infrastructure.nix.in;
in
pkgs.stdenv.mkDerivation {
  name = "infrastructure.nix";
  buildCommand = ''
    sed -e "s|@networkFiles@|${toString networkFiles}|" \
        -e "s|@nixpkgs@|${nixpkgs}|" \
        -e "s|@nixos@|${nixos}|" \
        -e "s|@useBackdoor@|${if useBackdoor then "true" else "false"}|" \
        -e "s|@useVMTesting@|${if useVMTesting then "true" else "false"}|" \
        ${infrastructureNix} > $out
  '';
}
